<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Configuration server_environment pour variables d'environnement -->
        
        <!-- Configuration email par défaut -->
        <record id="server_env_mail_default" model="server.env.mixin">
            <field name="name">Default Mail Config</field>
        </record>

        <!-- Configuration API tokens -->
        <record id="server_env_api_tokens" model="server.env.mixin">
            <field name="name">API Tokens Config</field>
        </record>

        <!-- Timezone par défaut -->
        <record id="base.user_admin" model="res.users">
            <field name="tz">Europe/Lisbon</field>
        </record>

        <!-- Configuration audit log pour modèles sensibles -->
        <record id="auditlog_rule_partner" model="auditlog.rule">
            <field name="name">Partner Audit</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="log_read" eval="False"/>
            <field name="log_create" eval="True"/>
            <field name="log_write" eval="True"/>
            <field name="log_unlink" eval="True"/>
            <field name="state">subscribed</field>
        </record>

        <record id="auditlog_rule_lead" model="auditlog.rule">
            <field name="name">Lead Audit</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="log_read" eval="False"/>
            <field name="log_create" eval="True"/>
            <field name="log_write" eval="True"/>
            <field name="log_unlink" eval="True"/>
            <field name="state">subscribed</field>
        </record>

    </data>
</odoo>
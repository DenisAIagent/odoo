<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue Liste des Plateformes -->
        <record id="view_mdmc_platform_tree" model="ir.ui.view">
            <field name="name">mdmc.platform.tree</field>
            <field name="model">mdmc.platform</field>
            <field name="arch" type="xml">
                <tree string="Plateformes Publicitaires" default_order="sequence">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="api_enabled"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire Plateforme -->
        <record id="view_mdmc_platform_form" model="ir.ui.view">
            <field name="name">mdmc.platform.form</field>
            <field name="model">mdmc.platform</field>
            <field name="arch" type="xml">
                <form string="Plateforme Publicitaire">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="color" widget="color"/>
                            </group>
                            <group>
                                <field name="api_enabled"/>
                                <field name="api_url" attrs="{'invisible': [('api_enabled', '=', False)]}"/>
                                <field name="api_version" attrs="{'invisible': [('api_enabled', '=', False)]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Description de la plateforme..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Kanban Plateformes -->
        <record id="view_mdmc_platform_kanban" model="ir.ui.view">
            <field name="name">mdmc.platform.kanban</field>
            <field name="model">mdmc.platform</field>
            <field name="arch" type="xml">
                <kanban default_order="sequence">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="api_enabled"/>
                    <field name="color"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill" t-att-style="'border-left: 5px solid ' + kanban_color(record.color.raw_value)">
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-att-style="'background-color: ' + kanban_color(record.color.raw_value)"/>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"><field name="name"/></strong>
                                            <small class="o_kanban_record_subtitle text-muted">
                                                <field name="code"/>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span t-if="record.api_enabled.raw_value" class="badge badge-success">API</span>
                                            <span t-if="!record.api_enabled.raw_value" class="badge badge-secondary">Pas d'API</span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span t-if="!record.active.raw_value" class="badge badge-danger">Archivé</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action Menu Plateformes -->
        <record id="action_mdmc_platform" model="ir.actions.act_window">
            <field name="name">Plateformes Publicitaires</field>
            <field name="res_model">mdmc.platform</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première plateforme publicitaire
                </p>
                <p>
                    Configurez les plateformes que vous utilisez pour vos campagnes (YouTube, Meta, TikTok, etc.)
                </p>
            </field>
        </record>

        <!-- Menu Principal -->
        <menuitem id="menu_mdmc_base_root"
                  name="MDMC"
                  sequence="1"
                  web_icon="mdmc_base,static/description/icon.png"/>

        <menuitem id="menu_mdmc_configuration"
                  name="Configuration"
                  parent="menu_mdmc_base_root"
                  sequence="90"/>

        <menuitem id="menu_mdmc_platform"
                  name="Plateformes"
                  parent="menu_mdmc_configuration"
                  action="action_mdmc_platform"
                  sequence="10"/>

    </data>
</odoo>
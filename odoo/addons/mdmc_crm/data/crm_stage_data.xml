<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Étapes de leads MDMC -->
        
        <record id="stage_lead_new" model="crm.stage">
            <field name="name">Nouveau Lead</field>
            <field name="sequence">1</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
            <field name="is_won" eval="False"/>
        </record>

        <record id="stage_lead_qualified" model="crm.stage">
            <field name="name">Qualifié</field>
            <field name="sequence">2</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
            <field name="is_won" eval="False"/>
        </record>

        <record id="stage_lead_contacted" model="crm.stage">
            <field name="name">Contacté</field>
            <field name="sequence">3</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
            <field name="is_won" eval="False"/>
        </record>

        <record id="stage_lead_meeting" model="crm.stage">
            <field name="name">RDV Programmé</field>
            <field name="sequence">4</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
            <field name="is_won" eval="False"/>
        </record>

        <record id="stage_lead_proposal" model="crm.stage">
            <field name="name">Proposition Envoyée</field>
            <field name="sequence">5</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
            <field name="is_won" eval="False"/>
        </record>

        <record id="stage_lead_won" model="crm.stage">
            <field name="name">Client</field>
            <field name="sequence">6</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
            <field name="is_won" eval="True"/>
        </record>

        <record id="stage_lead_lost" model="crm.stage">
            <field name="name">Perdu</field>
            <field name="sequence">7</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="True"/>
            <field name="is_won" eval="False"/>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- SDR : peut voir tous les leads non assignés + les siens -->
        <record id="rule_crm_lead_sdr" model="ir.rule">
            <field name="name">CRM Lead: SDR access</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[
                '|',
                ('user_id', '=', False),  # leads non assignés
                ('user_id', '=', user.id)  # ou assignés à moi
            ]</field>
            <field name="groups" eval="[(4, ref('mdmc_base.group_mdmc_sdr'))]"/>
        </record>

        <!-- Sales : peut voir tous les leads -->
        <record id="rule_crm_lead_sales" model="ir.rule">
            <field name="name">CRM Lead: Sales access</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('mdmc_base.group_mdmc_sales'))]"/>
        </record>

        <!-- Manager : accès total -->
        <record id="rule_crm_lead_manager" model="ir.rule">
            <field name="name">CRM Lead: Manager access</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('mdmc_base.group_mdmc_manager'))]"/>
        </record>

    </data>
</odoo>
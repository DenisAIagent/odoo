            <field name="mdmc_platform_id" ref="mdmc_base.platform_youtube"/>
            <field name="mdmc_recurring">True</field>
            <field name="invoice_policy">order</field>
            <field name="description_sale">Gestion complète de vos campagnes YouTube Ads par notre équipe d'experts. Inclut : création, optimisation, reporting mensuel.</field>
